# ${WORK_HOME}/remove_compute_node.log

/var/lib/ardana/automation/remove_compute_node.sh -c $COMPUTE_NODE_NAME -n $COBBLER_NODE_NAME -n $AUTO_ID | tee \
 ${WORK_HOME}/remove_compute_node.log


success=1
tesres=`grep  ${WORK_HOME}/remove_compute_node.log

res=$?

exit $res
