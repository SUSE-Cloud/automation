# fetch the latest automation updates
update_automation


DIST_NAME=$(echo $repository|cut -d "_" -f 1)
DIST_VERSION=$(echo $repository|cut -d "_" -f 2-)


### NOTE(dmueller): Removed, the script is not checking repos correctly
